<section class="hero">
  <div class="hero-content">
    <h1>Mahabharatham</h1>
    <p>Journey through the greatest epic ever told</p>
    <div class="cta-buttons">
      <a href="/chapters" class="primary-button">Start Reading</a>
      <a href="/characters" class="secondary-button">Meet Characters</a>
    </div>
  </div>
</section>

<style>
  .hero {
    background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/images/mahabharata-hero.jpg');
    background-size: cover;
    background-position: center;
    height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    margin: -2rem -2rem 2rem -2rem;
  }

  .hero-content {
    max-width: 800px;
    padding: 0 2rem;
  }

  h1 {
    font-size: 4rem;
    margin-bottom: 1rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  p {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .primary-button,
  .secondary-button {
    padding: 0.8rem 2rem;
    border-radius: 2rem;
    text-decoration: none;
    font-weight: 600;
    transition: transform 0.2s ease;
  }

  .primary-button:hover,
  .secondary-button:hover {
    transform: translateY(-2px);
  }

  .primary-button {
    background: var(--accent);
    color: white;
  }

  .secondary-button {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  /* Media queries for responsiveness */
  @media (max-width: 768px) {
    .hero {
      height: 400px;
    }

    h1 {
      font-size: 2.5rem;
    }

    p {
      font-size: 1.2rem;
    }

    .cta-buttons {
      flex-direction: column;
      gap: 0.5rem;
    }

    .primary-button,
    .secondary-button {
      width: 100%;
      padding: 0.6rem 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .hero {
      height: 300px;
      margin: -1rem -1rem 1rem -1rem;
    }

    h1 {
      font-size: 2rem;
    }

    p {
      font-size: 1rem;
    }

    .cta-buttons {
      gap: 0.5rem;
    }

    .primary-button,
    .secondary-button {
      padding: 0.5rem 1rem;
    }
}</style>
